<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinesecooly.user.mapper.UserAuthorityMapper">

    <resultMap id="BaseResultMap" type="com.chinesecooly.mysql.domain.UserAuthority">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="userId" column="user_id" jdbcType="BIGINT"/>
            <result property="authorityId" column="authority_id" jdbcType="BIGINT"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="modifiedTime" column="modified_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,authority_id,
        create_time,modified_time
    </sql>

    <select id="selectAllByUserId" resultType="com.chinesecooly.mysql.domain.Authority">
        select authority.key
        from authority
                 inner join(
            select user_authority.authority_id
            from user_authority
            where user_authority.user_id = #{userId}
            union
            select role_authority.authority_id
            from role_authority
            where role_id in (
                select user_role.role_id
                from user_role
                where user_role.user_id = #{userId}
            )
        ) ua_ra_ur
        where authority.id = ua_ra_ur.authority_id;
    </select>
</mapper>
